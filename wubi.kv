
<wubi>:
    orientation: 'vertical'
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'data/images/background.jpg'
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        id: MyBox
        TextInput:
            id: MyTextInput
            #mddict: root.gen_dict()
            size: MyBox.width, 200
            size_hint: None, None
            pos: 100, 100
            text: "请输入一个汉字" 
            font_size: 100
            -font_name: root.font_name()
        BoxLayout:
            padding: 10
            spacing: 10
            size_hint: 1, None
            pos_hint: {'top': 1}
            height: 200
            Label:
                id: ResultDisplayLabel
                height: 200
                text_size: self.width, None
                font_size: 100
                color: (0, 1, 1, .8)
                text: '无结果'
                markup: True
                valign: 'middle'
                -font_name: root.font_name()
            Button:
                id: Query
                height: 200
                text_size: self.width, None
                color: (0, 1, 1, .8)
                text: '查询'
                font_size: 100
                valign: 'middle'
                halign: 'center'
                markup: True
                on_press: root.query(MyTextInput.text)
                -font_name: root.font_name()
        BoxLayout:
            padding: 10
            spacing: 10
            size_hint: 1, None
            pos_hint: {'top': 1}
            height: 1200
